<Window x:Class="ActivitiesApp.Windows.EventEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование мероприятия"
        Width="760" Height="520"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource AppWhite}"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource AppAccent}">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="24">
                <Ellipse Width="42"
                         Height="42"
                         Fill="White"
                         Opacity="0.25"/>
                <TextBlock x:Name="TbTitle"
                           Text="Мероприятие"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="16,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource AppSoft}"
                    CornerRadius="16"
                    Padding="16"
                    Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Логотип мероприятия"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>

                    <Border Height="160"
                            CornerRadius="12"
                            Background="White"
                            HorizontalAlignment="Stretch">
                        <Image Source="1.png"
                               Stretch="Uniform"/>
                    </Border>

                    <Button Content="Изменить изображение"
                            Margin="0,12,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    BorderBrush="{StaticResource AppAccent}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,14">
                        <TextBlock Text="Название мероприятия"/>
                        <TextBox x:Name="TbName"
                                 Height="32"
                                 TextChanged="TbName_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,0,0,14">
                        <TextBlock Text="Направление"/>
                        <ComboBox x:Name="CbDirection" Height="32">
                            <ComboBoxItem Content="Информационная безопасность"/>
                            <ComboBoxItem Content="Аудит"/>
                            <ComboBoxItem Content="Криптография"/>
                            <ComboBoxItem Content="Другое"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,14">
                        <TextBlock Text="Город"/>
                        <ComboBox x:Name="CbCity"
                                  DisplayMemberPath="Name"
                                  Height="32"/>
                    </StackPanel>

                    <Grid Grid.Row="3" Margin="0,0,0,14">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Дата начала"/>
                            <DatePicker x:Name="DpStart"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Дата окончания"/>
                            <DatePicker x:Name="DpEnd"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="4" Margin="0,0,0,14">
                        <TextBlock Text="Описание"/>
                        <TextBox x:Name="TbDesc"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="100"/>
                    </StackPanel>

                    <Button x:Name="BtnAddActivity"
                            Grid.Row="6"
                            Content="＋ Добавить активность"
                            Visibility="Collapsed"
                            HorizontalAlignment="Left"
                            Click="BtnAddActivity_Click"/>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Background="{StaticResource AppSoft}">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="24">
                <Button Content="Отмена"
                        Width="120"
                        Margin="0,0,12,0"
                        Background="Transparent"
                        Foreground="Black"
                        Click="BtnCancel_Click"/>

                <Button Content="Сохранить"
                        Width="150"
                        FontWeight="SemiBold"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
