<Page x:Class="ActivitiesApp.Pages.OrganizerActivitiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Активности"
      Background="{StaticResource AppWhite}"
      FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource AppAccent}">
            <Grid Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Назад"
                        Width="120"
                        Click="BtnBack_Click"/>

                <TextBlock Grid.Column="1"
                           Text="Управление активностями"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="Выход"
                        Width="120"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="{StaticResource AppSoft}"
                    CornerRadius="16"
                    Padding="16"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Поиск"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="TbSearch"
                                 Height="32"
                                 Margin="0,6,0,0"
                                 TextChanged="UiChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Margin="16,0,0,0">
                        <TextBlock Text="Мероприятие"
                                   FontWeight="SemiBold"/>
                        <ComboBox x:Name="CbEvent"
                                  Height="32"
                                  Margin="0,6,0,0"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="UiChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Margin="16,0,0,0">
                        <TextBlock Text="Сортировка"
                                   FontWeight="SemiBold"/>
                        <ComboBox x:Name="CbSort"
                                  Height="32"
                                  Margin="0,6,0,0"
                                  SelectionChanged="UiChanged">
                            <ComboBoxItem Content="Без сортировки" IsSelected="True"/>
                            <ComboBoxItem Content="Время начала ↑"/>
                            <ComboBoxItem Content="Время начала ↓"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    BorderBrush="{StaticResource AppAccent}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="12">
                <DataGrid x:Name="DgActivities"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          RowHeight="34"
                          MouseDoubleClick="DgActivities_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding ID}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Название"
                                            Binding="{Binding Name}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Мероприятие"
                                            Binding="{Binding Мероприятия.Name}"
                                            Width="220"/>
                        <DataGridTextColumn Header="День"
                                            Binding="{Binding Day}"
                                            Width="90"/>
                        <DataGridTextColumn Header="Начало"
                                            Binding="{Binding StartTime}"
                                            Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Row="2"
                    Background="{StaticResource AppSoft}"
                    CornerRadius="16"
                    Padding="16"
                    Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="＋ Добавить активность"
                            Width="220"
                            Click="BtnAdd_Click"/>

                    <Button Grid.Column="1"
                            Content="Удалить"
                            Width="140"
                            Background="DarkRed"
                            Foreground="White"
                            Click="BtnDelete_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
