<Page x:Class="ActivitiesApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход"
      Background="{StaticResource AppWhite}"
      FontFamily="Segoe UI">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource AppAccent}">
            <StackPanel VerticalAlignment="Center"
                        Margin="40">
                <TextBlock Text="Events Manager"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"/>

                <TextBlock Text="Управление мероприятиями и активностями"
                           Foreground="White"
                           Opacity="0.85"
                           Margin="0,10,0,0"/>

                <Image Source="logo.png"
                       Height="240"
                       Stretch="Uniform"
                       Margin="0,30,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Border Background="White"
                    CornerRadius="20"
                    Padding="28"
                    VerticalAlignment="Center"
                    Margin="24"
                    BorderBrush="#22000000"
                    BorderThickness="1">
                <StackPanel>

                    <TextBlock Text="Добро пожаловать"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource AppAccent}"/>

                    <TextBlock Text="Войдите в систему, чтобы продолжить"
                               Margin="0,6,0,20"
                               Foreground="#66000000"/>

                    <TextBlock Text="ID пользователя"/>
                    <TextBox x:Name="TbId"
                             Height="34"
                             Margin="0,6,0,14"/>

                    <TextBlock Text="Пароль"/>
                    <PasswordBox x:Name="PbPassword"
                                 Height="34"
                                 Margin="0,6,0,20"/>

                    <Button Content="Войти"
                            Height="38"
                            FontWeight="SemiBold"
                            Click="BtnLogin_Click"/>

                    <Button Content="Продолжить как гость"
                            Height="34"
                            Margin="0,10,0,0"
                            Background="{StaticResource AppSoft}"
                            Foreground="Black"
                            Click="BtnGuest_Click"/>

                    <TextBlock x:Name="TbError"
                               Foreground="DarkRed"
                               TextWrapping="Wrap"
                               Margin="0,14,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
