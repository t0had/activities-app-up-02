<Page x:Class="ActivitiesApp.Pages.OrganizerProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль"
      Background="{StaticResource AppWhite}"
      FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource AppAccent}">
            <Grid Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Назад"
                        Width="120"
                        Click="BtnBack_Click"/>

                <TextBlock Grid.Column="1"
                           Text="Профиль организатора"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="Выход"
                        Width="120"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" Margin="24" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <Border Background="{StaticResource AppSoft}"
                            CornerRadius="16"
                            Padding="16"
                            Margin="0,0,0,16">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="White"
                                    CornerRadius="12"
                                    Width="180"
                                    Height="180">
                                <Image x:Name="ImgPhoto"
                                       Stretch="UniformToFill"/>
                            </Border>
                            <Button Content="Сменить фото"
                                    Margin="0,16,0,0"
                                    Background="{StaticResource AppAccent}"
                                    Foreground="White"
                                    Click="BtnChangePhoto_Click"/>
                            <TextBlock x:Name="TbPhotoPath"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Opacity="0.7"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Border Grid.Column="1"
                        Background="{StaticResource AppSoft}"
                        CornerRadius="16"
                        Padding="24">
                    <StackPanel>
                        <TextBlock Text="ID (только чтение)" FontWeight="SemiBold"/>
                        <TextBox x:Name="TbId" IsReadOnly="True" Height="32" Margin="0,6,0,12"/>

                        <TextBlock Text="ФИО" FontWeight="SemiBold"/>
                        <TextBox x:Name="TbFio" Height="32" Margin="0,6,0,12"/>

                        <TextBlock Text="Email" FontWeight="SemiBold"/>
                        <TextBox x:Name="TbEmail" Height="32" Margin="0,6,0,12"/>

                        <TextBlock Text="Телефон" FontWeight="SemiBold"/>
                        <TextBox x:Name="TbPhone" Height="32" Margin="0,6,0,12"/>

                        <TextBlock Text="Новый пароль" FontWeight="SemiBold"/>
                        <Grid Margin="0,6,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <PasswordBox x:Name="PbPass1" Height="32"/>
                            <TextBox x:Name="TbPass1" Height="32" Visibility="Collapsed"/>

                            <Button Grid.Column="1"
                                    Content="Показать"
                                    Margin="10,0,0,0"
                                    Click="BtnTogglePass_Click"/>
                        </Grid>

                        <TextBlock Text="Повтор пароля" FontWeight="SemiBold"/>
                        <PasswordBox x:Name="PbPass2" Height="32" Margin="0,6,0,24"/>

                        <Button Content="Сохранить"
                                Background="{StaticResource AppAccent}"
                                Foreground="White"
                                Height="40"
                                FontWeight="SemiBold"
                                Click="BtnSave_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
