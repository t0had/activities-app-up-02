<Page x:Class="ActivitiesApp.Pages.EventDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мероприятие"
      Background="{StaticResource AppWhite}"
      FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource AppAccent}">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Назад"
                        Width="120"
                        Click="BtnBack_Click"/>

                <TextBlock Grid.Column="1"
                           Text="Информация о мероприятии"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="Выход"
                        Width="120"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource AppSoft}"
                    CornerRadius="16"
                    Padding="16"
                    Margin="0,0,20,0">
                <StackPanel>
                    <Image Source="1.png"
                           Height="140"
                           Stretch="Uniform"
                           Margin="0,0,0,16"/>

                    <TextBlock x:Name="TbName"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource AppAccent}"
                               Margin="0,0,0,8"/>

                    <TextBlock x:Name="TbDate"
                               Margin="0,2"/>
                    <TextBlock x:Name="TbCity"
                               Margin="0,2"/>
                    <TextBlock x:Name="TbOrganizer"
                               Margin="0,2"/>

                    <Separator Margin="0,12"/>

                    <TextBlock Text="Описание"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>

                    <TextBlock x:Name="TbDesc"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    BorderBrush="{StaticResource AppAccent}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="Активности мероприятия"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AppAccent}"/>
                    </StackPanel>

                    <DataGrid x:Name="DgActivities"
                              Grid.Row="1"
                              Margin="0,14,0,0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              RowHeight="34">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название"
                                                Binding="{Binding Name}"
                                                Width="*"/>
                            <DataGridTextColumn Header="День"
                                                Binding="{Binding Day}"
                                                Width="90"/>
                            <DataGridTextColumn Header="Начало"
                                                Binding="{Binding StartTime}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Модератор"
                                                Binding="{Binding ModeratorName}"
                                                Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
