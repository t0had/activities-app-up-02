<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AppWhiteColor">#FFFFFFFF</Color>
        <Color x:Key="AppSoftColor">#FFABCFCE</Color>
        <Color x:Key="AppAccentColor">#FF546F94</Color>

        <SolidColorBrush x:Key="AppWhite" Color="{StaticResource AppWhiteColor}" />
        <SolidColorBrush x:Key="AppSoft" Color="{StaticResource AppSoftColor}" />
        <SolidColorBrush x:Key="AppAccent" Color="{StaticResource AppAccentColor}" />

        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Background" Value="{StaticResource AppAccent}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="0,6,0,0"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>
</ResourceDictionary>