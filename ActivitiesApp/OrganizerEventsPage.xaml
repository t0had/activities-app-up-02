<Page x:Class="ActivitiesApp.Pages.OrganizerEventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мероприятия"
      Background="{StaticResource AppWhite}"
      FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource AppAccent}">
            <Grid Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Назад"
                        Width="120"
                        Click="BtnBack_Click"/>

                <TextBlock Grid.Column="1"
                           Text="Управление мероприятиями"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="Выход"
                        Width="120"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="{StaticResource AppSoft}"
                    CornerRadius="16"
                    Padding="16"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Поиск"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="TbSearch"
                                 Height="32"
                                 Margin="0,6,0,0"
                                 TextChanged="UiChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Margin="16,0,0,0">
                        <TextBlock Text="Дата"
                                   FontWeight="SemiBold"/>
                        <DatePicker x:Name="TbDate"
                                    Margin="0,6,0,0"
                                    SelectedDateChanged="UiChanged"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1"
                    BorderBrush="{StaticResource AppAccent}"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="12">
                <ListView x:Name="LvEvents"
                          MouseDoubleClick="LvEvents_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource AppSoft}"
                                    CornerRadius="12"
                                    Padding="12"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Width="40"
                                           Height="40"
                                           Stretch="Uniform"
                                           Source="pack://application:,,,/Resources/1.png"/>

                                    <StackPanel Grid.Column="1"
                                                Margin="12,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource AppAccent}"/>
                                        <TextBlock Text="{Binding Direction}"
                                                   Opacity="0.8"/>
                                        <TextBlock Text="{Binding Города.Name}"
                                                   Opacity="0.8"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Date}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Background="{StaticResource AppSoft}"
                CornerRadius="16"
                Padding="16"
                Margin="24,0,24,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="＋ Добавить мероприятие"
                        Width="240"
                        Click="BtnAdd_Click"/>

                <Button Grid.Column="1"
                        Content="Удалить"
                        Width="140"
                        Background="DarkRed"
                        Foreground="White"
                        Click="BtnDelete_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
